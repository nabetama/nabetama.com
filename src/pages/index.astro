---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { compareDesc, format } from 'date-fns';

const EXCLUDE_POST_ID = '1999-01-01';

const allPosts = await getCollection('posts');
const posts = allPosts
  .filter((post) => post.id !== EXCLUDE_POST_ID)
  .sort((a, b) => compareDesc(new Date(a.data.date), new Date(b.data.date)));

// 最新3件をカード表示、4件目以降をリスト表示
const featuredPosts = posts.slice(0, 3);
const remainingPosts = posts.slice(3, 21); // 最大18件

// 読了時間を概算（日本語: 約400文字/分）
function estimateReadingTime(content: string): number {
  const charCount = content.length;
  const minutes = Math.ceil(charCount / 400);
  return Math.max(1, minutes);
}
---

<BaseLayout wide={true}>
  <div class="max-w-5xl mx-auto px-6 lg:px-12">
    <!-- Blog Posts セクション（最新3件） -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold text-center mb-8 dark:text-white">Recent Posts</h2>
      <!-- グリッド背景付きコンテナ -->
      <div class="grid-background rounded-lg p-4">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
          {
            featuredPosts.map((post) => (
              <a href={`/posts/${post.id}/`} class="group block">
                <article class="blog-card h-full flex flex-col rounded-lg overflow-hidden border border-gray-200 dark:border-darktheme-border bg-white dark:bg-darktheme-card transition-all duration-300 group-hover:bg-gray-50 dark:group-hover:bg-neutral-800">
                  <!-- サムネイル -->
                  <div class="h-32 thumbnail-placeholder relative overflow-hidden">
                    {post.data.thumbnail ? (
                      <img
                        src={post.data.thumbnail}
                        alt={post.data.title}
                        class="w-full h-full object-cover"
                      />
                    ) : (
                      <div class="absolute inset-0 flex items-center justify-center">
                        <span class="text-gray-600 dark:text-gray-500 text-4xl font-bold">{post.data.title.charAt(0)}</span>
                      </div>
                    )}
                  </div>
                  <!-- コンテンツ -->
                  <div class="p-4 flex flex-col flex-grow">
                    {post.data.tags && post.data.tags.length > 0 && (
                      <span class="inline-block text-[10px] font-medium px-2 py-0.5 rounded-full bg-indigo-100 dark:bg-indigo-900 text-indigo-800 dark:text-indigo-200 mb-2 self-start">
                        {post.data.tags[0]}
                      </span>
                    )}
                    <h3 class="text-sm font-semibold mb-1 dark:text-white line-clamp-2">
                      {post.data.title}
                    </h3>
                    {post.data.description && (
                      <p class="text-xs text-gray-600 dark:text-darktheme-muted mb-3 line-clamp-2">
                        {post.data.description}
                      </p>
                    )}
                    <div class="flex items-center justify-end text-xs text-gray-500 dark:text-darktheme-muted mt-auto pt-2">
                      <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <circle cx="12" cy="12" r="10" stroke-width="2" />
                        <path stroke-linecap="round" stroke-width="2" d="M12 6v6l4 2" />
                      </svg>
                      <span>{estimateReadingTime(post.body || '')} min read</span>
                    </div>
                  </div>
                </article>
              </a>
            ))
          }
        </div>
      </div>
    </section>

    <!-- All Blogs セクション（4件目以降） -->
    {remainingPosts.length > 0 && (
      <section>
        <h2 class="text-2xl font-bold text-center mb-8 dark:text-white">All Blogs</h2>
        <div class="divide-y divide-gray-100 dark:divide-darktheme-border">
          {
            remainingPosts.map((post) => (
              <a href={`/posts/${post.id}/`} class="block group">
                <article class="flex flex-col sm:flex-row sm:items-start gap-1 sm:gap-6 py-4 pl-4 border-l-2 border-transparent hover:border-gray-400 dark:hover:border-gray-500 hover:bg-gray-50 dark:hover:bg-neutral-900 transition-all">
                  <time
                    class="text-xs text-gray-500 dark:text-darktheme-muted shrink-0 w-28"
                    datetime={post.data.date}
                  >
                    {format(new Date(post.data.date), 'yyyy年MM月dd日')}
                  </time>
                  <div class="flex-1">
                    <span class="text-sm font-medium dark:text-white">
                      {post.data.title}
                    </span>
                    {post.data.description && (
                      <p class="text-xs text-gray-600 dark:text-darktheme-muted mt-0.5 line-clamp-1">
                        {post.data.description}
                      </p>
                    )}
                  </div>
                </article>
              </a>
            ))
          }
        </div>
      </section>
    )}
  </div>
</BaseLayout>

<style>
  .grid-background {
    background-image:
      radial-gradient(circle, rgba(255, 255, 255, 0.06) 1px, transparent 1px);
    background-size: 24px 24px;
    background-color: #0f0f0f;
  }

  :global(.dark) .grid-background {
    background-image:
      radial-gradient(circle, rgba(255, 255, 255, 0.06) 1px, transparent 1px);
    background-color: #0f0f0f;
  }

  @media (prefers-color-scheme: light) {
    .grid-background {
      background-image:
        radial-gradient(circle, rgba(0, 0, 0, 0.08) 1px, transparent 1px);
      background-color: #fafafa;
    }
  }

  .thumbnail-placeholder {
    background-image:
      radial-gradient(circle, rgba(255, 255, 255, 0.06) 1px, transparent 1px);
    background-size: 16px 16px;
    background-color: #0f0f0f;
  }

  @media (prefers-color-scheme: light) {
    .thumbnail-placeholder {
      background-image:
        radial-gradient(circle, rgba(0, 0, 0, 0.06) 1px, transparent 1px);
      background-color: #f3f4f6;
    }
  }

  .line-clamp-1 {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
