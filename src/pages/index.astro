---
import { getCollection } from "astro:content";
import { compareDesc, format } from "date-fns";
import BaseLayout from "@/layouts/BaseLayout.astro";

const EXCLUDE_POST_ID = "1999-01-01";

const allPosts = await getCollection("posts");
const posts = allPosts
  .filter((post) => post.id !== EXCLUDE_POST_ID)
  .sort((a, b) => compareDesc(new Date(a.data.date), new Date(b.data.date)));

// 最新3件をカード表示、4件目以降をリスト表示
const featuredPosts = posts.slice(0, 3);
const remainingPosts = posts.slice(3, 21); // 最大18件

// 読了時間を概算（日本語: 約400文字/分）
function estimateReadingTime(content: string): number {
  const charCount = content.length;
  const minutes = Math.ceil(charCount / 400);
  return Math.max(1, minutes);
}
---

<BaseLayout wide={true}>
  <div class="max-w-5xl mx-auto px-6 lg:px-12">
    <section class="mb-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
          {
            featuredPosts.map((post) => (
              <article
                class="blog-card group h-full flex flex-col rounded-lg overflow-hidden bg-white dark:bg-darktheme-card transition-all duration-300 hover:bg-gray-50 dark:hover:bg-neutral-800 cursor-pointer"
                data-href={`/posts/${post.id}/`}
                onclick="if (event.target.tagName !== 'A') window.location.href = this.dataset.href"
              >
                <div class="h-32 thumbnail-placeholder relative overflow-hidden">
                  {post.data.thumbnail ? (
                    <img
                      src={post.data.thumbnail}
                      alt={post.data.title}
                      class="w-full h-full object-cover"
                    />
                  ) : (
                    <div class="absolute inset-0 flex items-center justify-center">
                      <span class="text-gray-600 dark:text-gray-500 text-4xl font-bold">
                        {post.data.title.charAt(0)}
                      </span>
                    </div>
                  )}
                </div>
                <div class="p-4 flex flex-col grow">
                  {post.data.tags && post.data.tags.length > 0 && (
                    <a
                      href={`/tags/${post.data.tags[0]}/`}
                      class="inline-block text-[10px] font-medium px-2 py-0.5 rounded-full bg-indigo-100 dark:bg-indigo-900 text-indigo-800 dark:text-indigo-200 mb-2 self-start hover:bg-indigo-200 dark:hover:bg-indigo-800 transition-colors"
                    >
                      {post.data.tags[0]}
                    </a>
                  )}
                  <h3 class="text-sm font-semibold mb-1 dark:text-white line-clamp-2">
                    {post.data.title}
                  </h3>
                  {post.data.description && (
                    <p class="text-xs text-gray-600 dark:text-darktheme-muted mb-3 line-clamp-2">
                      {post.data.description}
                    </p>
                  )}
                  <div class="flex items-center justify-end text-xs text-gray-500 dark:text-darktheme-muted mt-auto pt-2">
                    <svg
                      class="w-3.5 h-3.5 mr-1"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <circle cx="12" cy="12" r="10" stroke-width="2" />
                      <path
                        stroke-linecap="round"
                        stroke-width="2"
                        d="M12 6v6l4 2"
                      />
                    </svg>
                    <span>{estimateReadingTime(post.body || "")} min read</span>
                  </div>
                </div>
              </article>
            ))
          }
        </div>
    </section>

    {
      remainingPosts.length > 0 && (
        <section>
          <h2 class="text-lg font-semibold mb-6 dark:text-white md:hidden">
            Archive
          </h2>
          <div class="border-t border-gray-100 dark:border-darktheme-border divide-y divide-gray-100 dark:divide-darktheme-border">
            {remainingPosts.map((post) => (
              <a href={`/posts/${post.id}/`} class="block group">
                <article class="flex flex-col sm:flex-row sm:items-start gap-1 sm:gap-6 py-4 pl-4 border-l-2 border-transparent hover:border-gray-400 dark:hover:border-gray-500 hover:bg-gray-50 dark:hover:bg-neutral-900 transition-all">
                  <time
                    class="text-xs text-gray-500 dark:text-darktheme-muted shrink-0 w-28"
                    datetime={post.data.date}
                  >
                    {format(new Date(post.data.date), "yyyy年MM月dd日")}
                  </time>
                  <div class="flex-1">
                    <span class="text-sm font-medium dark:text-white">
                      {post.data.title}
                    </span>
                    {post.data.description && (
                      <p class="text-xs text-gray-600 dark:text-darktheme-muted mt-0.5 line-clamp-1">
                        {post.data.description}
                      </p>
                    )}
                  </div>
                </article>
              </a>
            ))}
          </div>
        </section>
      )
    }
  </div>
</BaseLayout>

<style>
  .thumbnail-placeholder {
    background-image: radial-gradient(
      circle,
      rgba(255, 255, 255, 0.06) 1px,
      transparent 1px
    );
    background-size: 16px 16px;
    background-color: #0f0f0f;
  }

  @media (prefers-color-scheme: light) {
    .thumbnail-placeholder {
      background-image: radial-gradient(
        circle,
        rgba(0, 0, 0, 0.06) 1px,
        transparent 1px
      );
      background-color: #f3f4f6;
    }
  }

  .line-clamp-1 {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
